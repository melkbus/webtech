@using WebApplication1.Models
@using CloudinaryDotNet
@using CloudinaryDotNet.Actions
@model WebApplication1.Models.EventViewModel
@{
}
<!DOCTYPE html>


<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.5/css/bootstrap.min.css" integrity="sha384-AysaV+vQoT3kOAXZkl02PThvDr8HYKPZhNT5h/CXfBThSRXQ6jW5DO2ekP5ViFdi" crossorigin="anonymous">
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.5/js/bootstrap.min.js" integrity="sha384-BLiI7JTZm+JWlgKa0M0kGRpJbF2J8q+qreVrKBC47e3K6BW78kGLrCkeRX6I9RoK" crossorigin="anonymous"></script>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ViewEvent</title>
</head>
<body>
    <div>
        <h4>Events</h4>
        <hr />

        <div class="container" style="margin-top:50px;">

            <div class="row">
                @foreach (var item in Model.events)
            {

                    <div class="col-sm-4 col-lg-4 col-md-4">
                        <div class="thumbnail">
                            @Model.cloudinary.Api.UrlImgUp.Transform(
                                        new Transformation()
                                            .Width(320)
                                            .Height(150)
                                            .Crop("fill")).BuildImageTag(item.EventPicture)
                            <div class="caption">
                                <h4 class="pull-right">$@Html.DisplayFor(ModelItem => item.EventPrice)</h4>
                                <h4>
                                    <a href="#">@Html.DisplayFor(ModelItem => item.EventName)</a>
                                </h4>
                                <p>@Html.DisplayFor(ModelItem => item.EventDescription)</p>
                            </div>
                            <div class="interactio">
                                <p class="pull-right">Participants: @Html.DisplayFor(ModelItem => item.EventId)</p>
                                <p>
                                    <span class="glyphicon glyphicon-plus" title="Participate"></span>
                                    <span class="glyphicon glyphicon-star" title="Intrested"></span>
                                    <span class="glyphicon glyphicon-share" title="Share"></span>
                                </p>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>

</body>
</html>
