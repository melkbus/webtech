@model WebApplication1.Models.ChangesToProfile
@{
    ViewBag.Title = "Edit Profile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>


<head>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Profile</title>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
</head>
<body style="margin-top:50px">
    @using (Html.BeginForm("Settings", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form", style = "margin-top:50px",  enctype = "multipart/form-data" }))
    {

        @Html.AntiForgeryToken()
        <hr />
        @Html.ValidationSummary("", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(m => m.firstname, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBox("firstname", Model.firstname, new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.lastname, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBox("lastname", Model.lastname, new { @class = "form-control" })
            </div>
        </div>

            <div class="form-group">
                @Html.LabelFor(m => m.birthday, new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.EditorFor(m => m.birthday, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.description, new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.TextArea("description", Model.description, new { @class = "form-control", rows = "5" })
                </div>
            </div>

            <div class="form-group">
                @Html.Label("Change Password", new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.ActionLink("[Change Password]", "ChangePassword", "Manage")
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.ImageUpload, new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    <span class="form-group">
                        <input type="file" accept="image/*" aria-label="photo" name="ImageUpload" id="ImageUpload" />
                    </span>
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" class="btn btn-default" value="Update profile" />
                </div>
            </div>
    }
</body>

